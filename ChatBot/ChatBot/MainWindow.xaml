<Window x:Class="ChatBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatBot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Border DockPanel.Dock="Top">
            <TextBlock Name="ChatBot" Text="Welcome To ChatBot" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" ></TextBlock>
         
        </Border>
        <Border DockPanel.Dock="Top">
          
            <TextBlock Name="Details" HorizontalAlignment="Center" Text="Please provide following Details to continue" FontSize="20" ></TextBlock>

        </Border>
        <Border DockPanel.Dock="Top">
            <local:CustomerDetailsUserControl>

         </local:CustomerDetailsUserControl>
      </Border>
        <Border DockPanel.Dock="Top">
            </Border>
    </DockPanel>
</Window>
